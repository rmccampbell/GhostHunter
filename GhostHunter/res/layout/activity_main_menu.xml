<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutMainMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="edu.virginia.cs2110.rnm6u.ghosthunter.MainMenu" >

    <Button
        android:id="@+id/start_button"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:background="#00000000"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="15dp"
        android:onClick="startButtonPressed"
        android:text="@string/start_button"
        android:textSize="25sp" />

    <Button
        android:id="@+id/music_button"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:background="#00000000"
        android:textColor="#FFFFFFFF"
        android:onClick="musicButtonPressed"
        android:text="@string/music_button"
        android:textSize="25sp" />
    
    <Button
        android:id="@+id/difficulty_button"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:background="#00000000"
        android:textColor="#FFFFFFFF"
        android:onClick="difficultyButtonPressed"
        android:text="@string/difficulty_button"
        android:textSize="25sp" />

    <Button
        android:id="@+id/about_button"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:background="#00000000"
        android:textColor="#FFFFFFFF"
        android:layout_marginBottom="15dp"
        android:onClick="aboutButtonPressed"
        android:text="@string/about_button"
        android:textSize="25sp" />

</LinearLayout>