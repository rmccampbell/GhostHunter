<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutMainMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_menu"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="edu.virginia.cs2110.rnm6u.ghosthunter.MainMenu" >

    <Button
        android:id="@+id/start_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:onClick="startButtonPressed"
        android:text="@string/start_button"
        android:textSize="25sp" />

    <Button
        android:id="@+id/music_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:onClick="musicButtonPressed"
        android:text="@string/music_button"
        android:textSize="25sp" />

    <Button
        android:id="@+id/about_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:onClick="aboutButtonPressed"
        android:text="@string/about_button"
        android:textSize="25sp" />

</LinearLayout>